<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/morning</item>
        <item name="colorPrimaryDark">@color/morning</item>
        <item name="colorAccent">@color/morning</item>
        <item name="android:windowBackground">@color/background_morning</item>
        <item name="android:textColor">@color/morning</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/night</item>
        <item name="colorPrimaryDark">@color/night</item>
        <item name="colorAccent">@color/night</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/night</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
